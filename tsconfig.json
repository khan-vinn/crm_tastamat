{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "noUnusedLocals": false,
        "skipLibCheck": true,
        "incremental": false,
        "noUnusedParameters": false,
        "removeComments": true,
        "declaration": false,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "build",
        "rootDir": "src",
    },
    "include": [
        "node_modules/sosise-core/build",
        "./src/**/*"
    ],
    "lib": [
        "es2015"
    ]
}